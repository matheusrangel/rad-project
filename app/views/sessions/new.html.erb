<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, t('activerecord.attributes.user.email') %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, t('activerecord.attributes.user.password') %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit t('actions.login'), class: "btn btn-primary" %>
    <% end %>

    <p><%= t('others.new_user') %> <%= link_to t('actions.signup'), signup_path %></p>
  </div>
</div>
